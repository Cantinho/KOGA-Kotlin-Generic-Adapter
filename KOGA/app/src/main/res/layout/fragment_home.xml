<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/btnGoToSimpleAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_simple_adapter"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToMultipleAdapter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToMultipleAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_multiple_adapter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToSimpleAdapter" />

</androidx.constraintlayout.widget.ConstraintLayout>